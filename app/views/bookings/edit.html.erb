<div class="container d-flex align-items-center">
  <div class="d-flex flex-grow-1 justify-content-center ">
    <div class="col-sm-12 col-md-8 col-lg-6 p-3 form">
      <h1>Booking</h1>
      <%= simple_form_for @booking do |f| %>
        <%= f.input :appointment %>
        <%= f.submit class: 'btn btn-danger' %> <%= link_to 'Cancel', :back, class: 'text text-secondary' %>
      <% end %>
    </div>
  </div>
</div>
