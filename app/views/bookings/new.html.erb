<div class="container">
  <h1>New booking</h1>

  <%= simple_form_for [@haircut, @booking] do |f| %>
    <%= f.input :appointment %>
    <%= f.input :rating %>
    <%= f.input :price %>
    <%= f.submit 'Book haircut', class: 'btn btn-primary' %> <%= link_to 'Cancel', haircuts_path, class: 'btn btn-danger' %>
  <% end %>


  <%# link_to 'Back to booking', booking_path(@booking) %>
</div>
