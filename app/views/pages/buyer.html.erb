<div>
  <h2>My bookings</h2>
  <table class='table'>
    <thead>
      <tr>
        <th>Barbier</th>
        <th>Time</th>
        <th>Price</th>
        <th>Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.haircut.user.full_name %></td>
          <td><%= booking.appointment.strftime("%d/%m/%Y %H:%M") %></td>
          <td><%= booking.price %></td>
          <td><%= booking.haircut.user.address %></td>
          <td><%= link_to 'Show', booking %></td>
          <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
          <td><%= link_to 'Destroy', booking, class:'text-danger' , method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
